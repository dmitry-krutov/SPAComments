{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "CommentsDb": "Host=postgres;Port=5432;Database=app_db;Username=postgres;Password=postgres",
    "Redis": "redis:6379",
    "RabbitMq": "amqp://guest:guest@rabbitmq:5672"
  },
  "FileService": {
    "BaseAddress": "http://file-service:8081",
    "Timeout": 10
  },
  "Captcha": {
    "TextLength": 6,
    "LifeTime": "00:05:00",
    "Image": {
      "Width": 200,
      "Height": 60,
      "FontSize": 32,
      "FontFamily": "Arial",
      "NoiseLines": 5,
      "NoiseDots": 50,
      "MaxRotationDegrees": 20,
      "MaxOffsetX": 5,
      "MaxOffsetY": 5,
      "UseRandomTextColors": true
    }
  },
  "Elasticsearch": {
    "Url": "http://elasticsearch:9200",
    "CommentsIndex": "spa-comments-comments"
  }
}
